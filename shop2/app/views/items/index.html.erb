<p id="notice"><%= notice %></p>
<h1>Railsはじめてマート</h1>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>商品画像</th>
      <th>説明</th>
      <th>価格（税抜き）</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.image_id %></td>
        <td><%= item.introduction %></td>
        <td><%= item.taxfree %></td>
        <td><%= link_to '詳細', item %></td>
        <td><%= link_to '編集', edit_item_path(item) %></td>
        <td><%= link_to '削除', item, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to '商品登録', new_item_path %>