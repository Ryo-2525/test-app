<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, :商品名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image_id, :商品画像 %>
    <%= form.text_field :image_id %>
  </div>

  <div class="field">
    <%= form.label :introduction, :商品説明 %>
    <%= form.text_area :introduction %>
  </div>

  <div class="field">
    <%= form.label :taxfree, :価格（税抜き） %>
    <%= form.number_field :taxfree %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
